<div class="container"  style="width: 500px; padding-top: 50px;" >
        <div class="col-md-6 pb-4">
            <h4>Sign In</h4>
          </div>
<%= form_for(resource, as: resource_name,:html => {:class => 'row g-3 my-1'}, url: session_path(resource_name)) do |f| %>
        
        <div class="col-md-12">
          <%= f.label :email ,:class => "form-label"%>
          <%= f.email_field :email, autofocus: true,:class => "form-control", autocomplete: "email" %>
        </div>
        <div class="col-12">
        
       <%= f.label :password, :class => "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password",:class => "form-control" %>
        </div>
    
       

        <div class="col-12">

    <%= f.submit "Log in", :class=>"btn btn-primary m-2"%>
          </div>
        
        <% end %>
       <%= render "devise/shared/links" %>

      </div>

         
      </div>

      
 
