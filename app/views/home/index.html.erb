  <tr>
    <th>User Name</th>
    <th>Role</th>
    <th> Action </th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= user.roles.first.name %>
    </td>
    <td>
      <%= link_to "Edit", edit_user_path(user), class: 'btn btn-primary' if can? :update, user%>
    </td>
  </tr>
    
  <% end %>
</table>
  

