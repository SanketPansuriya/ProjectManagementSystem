<h1>Tasks</h1>
<p style="color: green"><%= notice %></p>
<%= link_to "Add New Task", new_project_task_path %>

<br><br>
<table border="10" frame="VOID" rules="ALL">
  <tr>
    <th>Task Name</th>
    <th>Description</th>
    <th>Employee Name</th>
    <th>Employee Email</th>
    <th>status</th>
    <th> Action </th>
  </tr>
  <% @tasks.each do |task| 
        employee = User.find(task.user_id)
  %>
  <tr>
    <td>
      <%= task.title %>
      <%
        # params[:project_id] = task.sprint.project_id
        params[:task] = task.id
      %>
    </td>
     <td>
      <%= task.description %>
    </td>
    <td>
      <%= employee.name%>
    </td>
    <td>
      <%= employee.email %>
    </td>
    <td>
      <%= task.status %>
    </td>
    <td>
      <%= link_to "Edit Task", edit_project_task_path(id: task) %>
      <%= link_to "Delete", [task.sprint.project, task] , data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%>
    </td>
    
  </tr>
    
  <% end %>

</table>